<Window x:Class="FrontendGestorTutorias.VentanasTutor.ListaComentarios"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FrontendGestorTutorias.VentanasTutor"
        mc:Ignorable="d"
        Title="Lista Comentarios" Height="450" Width="400">
    <Grid>
        <Button x:Name="btnCancelar" Content="Cancelar" HorizontalAlignment="Left" Margin="26,390,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnConsultar" Content="Consultar" HorizontalAlignment="Left" Margin="314,390,0,0" VerticalAlignment="Top"/>
        <DataGrid x:Name="dgComentarios" AutoGenerateColumns="False" CanUserAddRows="False" Margin="10,66,10,111">
            <DataGridTextColumn Header="Comentario" Binding="{Binding comentarios}" Width="*" IsReadOnly="True"/>
        </DataGrid>

    </Grid>
</Window>
